{
  "manifest_version": 3,
  "name": "YouTube PiP",
  "version": "1.0",
  "description": "Позволяет использовать функцию картинка в картинке всего одним нажатием (Работает только на сайте YouTube)",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [ "scripting", "activeTab" ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Активировать PiP на YouTube"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/style.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}